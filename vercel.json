{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  
  "functions": {
    "app/api/ai/analyze/route.ts": {
      "maxDuration": 30
    },
    "app/api/quota/usage/route.ts": {
      "maxDuration": 15
    },
    "app/api/staff/invite/route.ts": {
      "maxDuration": 20
    },
    "app/api/**/*.ts": {
      "maxDuration": 10
    }
  },
  
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://bn-aura.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Clinic-ID"
        },
        {
          "key": "X-RateLimit-Policy",
          "value": "clinic-based"
        }
      ]
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/system/health"
    }
  ],
  
  
  "crons": [
    {
      "path": "/api/cron/cleanup-expired-invitations",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/reset-monthly-quotas", 
      "schedule": "0 0 1 * *"
    }
  ]
}
