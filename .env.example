SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@bn-aura.com

# AUTHENTICATION CONFIGURATION
# ============================================================================
NEXTAUTH_URL=https://bn-aura.vercel.app
NEXTAUTH_SECRET=super-secret-jwt-secret-32-chars-min
# JWT token expiration (in seconds)
JWT_EXPIRATION=86400
# Session settings
SESSION_MAX_AGE=86400

# PAYMENT & BILLING CONFIGURATION
# ============================================================================
# Stripe (if implementing payment)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Thai Payment Gateway (optional)
OMISE_PUBLIC_KEY=pkey_live_...
OMISE_SECRET_KEY=skey_live_...

# MONITORING & ANALYTICS
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=bn-aura
SENTRY_PROJECT=bn-aura-web
# Analytics
GOOGLE_ANALYTICS_ID=G-...
# Performance monitoring
VERCEL_ANALYTICS=1

# SECURITY CONFIGURATION
# ============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://bn-aura.vercel.app,https://www.bn-aura.com
# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
# Encryption keys
ENCRYPTION_KEY=32-char-encryption-key-here-min
DATA_ENCRYPTION_SECRET=another-32-char-secret-key

# FEATURE FLAGS
# ============================================================================
# Enable/disable features
FEATURE_DEMO_MODE=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_AI_ANALYSIS=true
FEATURE_MULTI_TENANT=true

# THIRD-PARTY INTEGRATIONS
# ============================================================================
# Social login (optional)
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
# File storage (if not using Supabase Storage)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_BUCKET=bn-aura-uploads
AWS_REGION=ap-southeast-1

# DEVELOPMENT/DEBUGGING
# ============================================================================
# Logging levels: error, warn, info, debug
LOG_LEVEL=info
# Enable debug features
DEBUG=false
# Database query logging
DB_QUERY_LOGGING=false

# CLINIC-SPECIFIC SETTINGS
# ============================================================================
# Default quota settings
DEFAULT_MONTHLY_QUOTA=50
DEFAULT_OVERAGE_RATE=75.00
DEFAULT_PLAN=basic
# System limits
MAX_CLINICS_PER_OWNER=3
MAX_STAFF_PER_CLINIC=20
MAX_FILE_SIZE_MB=10

# Google Cloud Vision
GOOGLE_CLOUD_VISION_KEY=your-cloud-vision-key

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@bn-aura.com

# Deployment Optimization
FAST_BUILD=1
